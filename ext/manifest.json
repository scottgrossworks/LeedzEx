{
  "manifest_version": 3,
  "name": "LeedzEx",
  "version": "1.0",
  "description": "Capture employers from any webpage.",
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Open LeedzEx"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*","https://*/*"],
      "all_frames": true,
      "match_about_blank": true,
      "js":[
        "js/parser.js",
        "js/linkedin_parser.js",
        "js/content.js"
      ],
      "css": ["css/leedz_layout.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "css/*",
        "js/*",
        "sidebar.html",
        "icons/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}